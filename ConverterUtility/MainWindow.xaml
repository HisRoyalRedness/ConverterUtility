<Window x:Class="HisRoyalRedness.com.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HisRoyalRedness.com"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">

    <Window.DataContext>
        <local:ApplicationModel />
    </Window.DataContext>

    <Window.Resources>
        <ResourceDictionary>
            <local:LocalTimeConverter x:Key="LocalTime" />
            <local:OffsetConverter x:Key="Offset" />
            <local:DateTimeZoneConverter x:Key="DateTimeZone" />
        </ResourceDictionary>
    </Window.Resources>
    
    <Grid>
        <TabControl ItemsSource="{Binding TabModels}">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Header}" />
                </DataTemplate>
            </TabControl.ItemTemplate>

            <TabControl.Resources>
                <DataTemplate DataType="{x:Type local:DateTimeTabModel}">
                    <DockPanel>
                        <DockPanel
                            Margin="0,5"
                            DockPanel.Dock="Bottom">
                            <CheckBox 
                                DockPanel.Dock="Left"
                                Content="Auto update"
                                IsChecked="{Binding Instant.AutoUpdate}"
                                />
                            <Grid />
                        </DockPanel>
                        
                        <ListView
                            Grid.IsSharedSizeScope="True"
                            ItemsSource="{Binding InstanceModels}" />
                    </DockPanel>
                </DataTemplate>

                <DataTemplate DataType="{x:Type local:TimeInstanceModel}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition SharedSizeGroup="DateTime" />
                            <ColumnDefinition Width="200"  SharedSizeGroup="TimeZone" />
                            <ColumnDefinition SharedSizeGroup="Offset" />
                        </Grid.ColumnDefinitions>

                        <xctk:DateTimePicker 
                            Margin="0,0,10,0"
                            Value="{Binding LocalTime}"
                            />

                        <!--<TextBox
                            TextAlignment="Right"
                            Margin="0,0,10,0"
                            Text="{Binding LocalTime, Converter={StaticResource LocalTime}}" 
                            />-->

                        <ComboBox
                            Margin="0,0,10,0"
                            Grid.Column="1"
                            ItemsSource="{Binding BclTimeZones}"
                            SelectedItem="{Binding TimeZone}"
                            />

                        <TextBlock
                            Margin="0,0,10,0"
                            Grid.Column="2"
                            Text="{Binding LocalTimeOffset, Converter={StaticResource Offset}}" 
                            />
                    </Grid>
                </DataTemplate>

                <DataTemplate DataType="{x:Type local:UtcInstanceModel}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition SharedSizeGroup="DateTime" />
                            <ColumnDefinition SharedSizeGroup="TimeZone" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            TextAlignment="Right"
                            Margin="0,0,10,0"
                            Text="{Binding LocalTime, Converter={StaticResource LocalTime}}" 
                            />
                        <TextBlock
                            Margin="0,0,10,0"
                            Grid.Column="1"
                            Text="UTC" 
                            />
                    </Grid>
                </DataTemplate>                
                
                <DataTemplate DataType="{x:Type local:EpochInstanceModel}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition SharedSizeGroup="DateTime" />
                            <ColumnDefinition SharedSizeGroup="TimeZone" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            TextAlignment="Right"
                            Margin="0,0,10,0"
                            Text="{Binding EpochSeconds}" 
                            />
                        <TextBlock
                            Margin="0,0,10,0"
                            Grid.Column="1"
                            Text="Epoch" 
                            />
                    </Grid>
                </DataTemplate>
            </TabControl.Resources>
        </TabControl>
    </Grid>
</Window>
